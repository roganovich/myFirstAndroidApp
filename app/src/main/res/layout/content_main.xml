<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/main"
    tools:context="roganovich.firstapp.MainActivity">


    <Button
        android:text="Шрифт"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtExample"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="37dp"
        android:id="@+id/btnFont" />

    <Button
        android:text="Цвет"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnFont"
        android:layout_toRightOf="@+id/txtExample"
        android:layout_toEndOf="@+id/txtExample"
        android:id="@+id/btnColor" />

    <TextView
        android:text="Образец текста на экране"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/txtExample"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnFont"
        android:layout_alignStart="@+id/btnFont" />

</RelativeLayout>